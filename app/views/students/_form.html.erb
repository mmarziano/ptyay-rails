<%= form_for @student, :method => 'post' do |f| %>
        <%= f.hidden_field :household_id, :value => current_user.household.id %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control", required: true %></br>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control", required: true %></br>
        <%= f.label :grade %>
        <%= f.collection_select :grade, grades, :to_str, :to_str, {}, {class: "form-control", :required => true}  %></br>
    <%= f.submit "Save", class: "btn btn-outline-light" %>
<% end %>